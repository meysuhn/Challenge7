//- Middle Column (Following)
.grid-33
  .app--section
    ul.app--user--list
      
      each val, index in following
        - var followerName = following[index].name
        - var followingScreen_name = "@"+following[index].screen_name
        - var followerImage = following[index].profile_image_url
        
        li
          .circle--fluid
            .circle--fluid--cell.circle--fluid--primary
              a.app--tweet--author
                .app--avatar(style='background-image: url(' + followerImage + ')')
                  img(src=followerImage)
                h4=followerName
                p=followingScreen_name
            .circle--fluid--cell
              a.button.button-text Unfollow
